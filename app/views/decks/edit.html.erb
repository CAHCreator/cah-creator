<h1>Editing Deck: <input id="deck-name" value="<%= @deck.name %>"></input></h1>

<!-- only deck owners should be able to edit watermark -->
<p>
  Watermark: <input maxlength="12" id="deck-watermark"></input>
</p>

<div id="realtime-status" class="center">
  <h3>Creating real-time session...</h3>
</div>

<div class="deck-details" style="display: none">
  <p>
    <button id="save">Save Deck</button>
  </p>

  <%= render "decks/editor" %>
</div>

<script>
  CAHCreator.setAuthToken("<%= current_user.socket_auth_token %>");
  CAHCreator.startEdit("<%= @deck.id %>");
</script>
