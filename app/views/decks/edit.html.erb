<h1><%= t('editing_deck') %>: <input id="deck-name" value="<%= @deck.name %>"></input></h1>

<!-- only deck owners should be able to edit watermark -->
<p>
  <%= t('watermark') %>: <input maxlength="12" id="deck-watermark"></input>
</p>

<div id="realtime-status" class="center">
  <h3><%= t('loading_real_time_session') %></h3>
</div>

<div class="deck-details" style="display: none">
  <p>
    <button id="save"><%= t('save_deck') %></button>
  </p>

  <%= render "decks/editor" %>
</div>

<script>
  CAHCreator.setAuthToken("<%= current_user.socket_auth_token %>");
  CAHCreator.startEdit("<%= @deck.id %>");
</script>
